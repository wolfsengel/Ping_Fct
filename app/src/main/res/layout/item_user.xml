<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:background="@drawable/slider_background"
    android:padding="8dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/contact_picture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/default_profile_picture"
        app:shapeAppearanceOverlay="@style/RoundedImage" />

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/contact_picture"
        android:text="..."
        android:textColor="@color/black_olive"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/contact_status_on"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignStart="@+id/contact_picture"
        android:layout_marginStart="32dp"
        android:src="@color/angel3_green"
        app:shapeAppearanceOverlay="@style/RoundedImage"
        android:visibility="gone"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/contact_status_off"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignStart="@+id/contact_picture"
        android:layout_marginStart="32dp"
        android:src="@color/dark_orange"
        app:shapeAppearanceOverlay="@style/RoundedImage"
        android:visibility="gone"/>


</RelativeLayout>
